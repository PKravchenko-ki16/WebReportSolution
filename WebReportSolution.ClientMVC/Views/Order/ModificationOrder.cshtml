@using WebReportSolution.ViewModels.Orders;
@model ModificationOrderViewModel

@if (Model == null)
{
    <h1>Create order</h1>
}
else
{
    <h1>Edit order</h1>
}
<hr />


@using (Html.BeginForm("ModificationOrder", "Order", FormMethod.Post, new { @class = "form-horizontal", role = "form"}))
{
    @Html.AntiForgeryToken()
    @if (Model != null)
    {
        @Html.HiddenFor(p => p.Id)
    }

    <div class="form-group">
        @Html.LabelFor(m => m.Price, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <input type="text" asp-for="Price" class="form-control" aria-label="Dollar amount"></div>
             <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Date, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <input asp-for="Date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-dark" value="Submit" />
        </div>
    </div>
}