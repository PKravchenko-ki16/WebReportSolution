@using WebReportSolution.ViewModels.Orders;
@model OrderViewModel

<h1>Current Order</h1>
<hr>

<div class="card" style="width: 30rem; margin-bottom: 30px;">
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Id: @Model.Id</li>
        <li class="list-group-item">Price: @Model.Price</li>
        <li class="list-group-item">Date: @Model.Date</li>
    </ul>
    <div class="card-body">
        <a class="card-link" asp-controller="Order" asp-action="ModificationOrder" asp-route-id="@Model.Id">Edit</a>
        <a class="card-link" asp-controller="Order" asp-action="RemoveOrder" asp-route-id="@Model.Id">Remove</a>
    </div>
</div>