@using WebReportSolution.ViewModels.Orders;
@model IEnumerable<OrderViewModel>

<h1>Orders catalog</h1>
<hr />

@if (ViewBag.Notification != null)
{
    <h3>@ViewBag.Notification</h3>
}

@if (Model != null)
{
    <div class="row row-cols-1 row-cols-md-2">
        @foreach (var order in Model)
        {
            <div class="col">
                <div class="card" style="width: 30rem; margin-bottom: 30px;">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><a asp-controller="Order" asp-action="GetOrderById" asp-route-id="@order.Id">Id: @order.Id</a></li>
                        <li class="list-group-item">Price: @order.Price</li>
                        <li class="list-group-item">Date: @order.Date</li>
                    </ul>
                </div>
            </div>
        }
    </div>
}